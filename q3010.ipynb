   "source": [
    "class Solution:\n",
    "    def minimumCost(self, nums: List[int]) -> int:\n",
    "        sortedNums = sorted(nums[1:])\n",
    "\n",
    "        minm = sortedNums[:2]\n",
    "\n",
    "        return sum([nums[0],*minm])"
   ]
  },
